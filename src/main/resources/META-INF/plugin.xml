<idea-plugin>
    <id>com.github.alexpl292.tldrintellij</id>
    <!--suppress PluginXmlValidity -->
    <name>Tldr-IntelliJ</name>
    <vendor>Alex Plate</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.sh</depends>
    <depends>org.intellij.plugins.markdown</depends>

    <extensions defaultExtensionNs="com.intellij">

        <lang.documentationProvider id="tldrDocumentationProvider"
                                    language="Shell Script"
                                    implementationClass="com.github.alexpl292.tldrintellij.TldrDocumentationProvider"
                                    order="first"/>
    </extensions>

</idea-plugin>
